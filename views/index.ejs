<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <form action="/" method="post">
      <input type="text" name="item_name" placeholder="Name">
      <input type="text" name="item_description" placeholder="Description">
      <input type="text" name="item_type" placeholder="Type">
      <input type="text" name="item_imageUrl" placeholder="URL">
      <input type="submit">
    </form>

    <ul>
      <% items.forEach((item) => { %>
        <li><%= item.name %></li>
        <p><img src="<%= item.imageUrl %>" /></p>
      <% }) %>
    </ul>
  </body>
</html>
